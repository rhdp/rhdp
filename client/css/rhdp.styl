bg = #202020

darkbg = #282828
mediumbg = #2c2c2c
lightbg = #303030

darkfg = #c0c0c0
mediumfg = #e0e0e0
lightfg = #f0f0f0

bluefg = #29c596

headerheight = 50px
toolbarinside = 30px

topicwidth = 20%

toolbarborder = 2px

toolbarheight = toolbarinside + toolbarborder

transition()
	-webkit-transition arguments
	-khtml-transition arguments
	-moz-transition arguments
	-ms-transition arguments
	-o-transition arguments
	transition arguments

user-select()
	-webkit-touch-callout arguments
	-webkit-user-select arguments
	-khtml-user-select arguments
	-moz-user-select arguments
	-ms-user-select arguments
	user-select arguments

html, body
	margin 0 auto
	padding 0
	background bg

*
	outline none
	font-family 'Open Sans', Helvetica, sans-serif
	transition .1s

#header
	position absolute
	top 0
	left 0
	right 0
	height headerheight
	background bg

#toolbar
	position absolute
	top headerheight
	left 0
	right 0
	height toolbarinside
	background darkbg
	border solid mediumbg
	border-width 0 0 toolbarborder 0

	> *
		float right
		color mediumfg
		background mediumbg
		border 0
		border-left 1px solid darkbg

		&:hover
			background lightbg

#topicbar
	position absolute
	top headerheight + toolbarheight
	left 0
	bottom 0
	width topicwidth
	background darkbg

#content
	position absolute
	top headerheight + toolbarheight
	left topicwidth
	right 0
	bottom 0
	background lightbg

#github
	float right
	color darkfg
	background darkbg
	height 100%
	border 0
	padding 10px

#submit
	height 100%
	width 80px
	padding 10px
	line-height 10px

#search
	height calc(100% - 20px)
	width 200px
	padding 10px

.article
	position absolute
	top 0
	left 0
	right 0
	bottom 0
	padding 20px
	color lightfg
	overflow auto

.topicnode
	width calc(100% - 10px)
	height 30px
	padding 5px
	line-height 30px
	background mediumbg
	color bluefg
	user-select none
	cursor default

	&:hover, &.selected
		background lightbg
