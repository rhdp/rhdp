bg = #202020

darkbg = #282828
mediumbg = #2c2c2c
lightbg = #303030

darkfg = #c0c0c0
mediumfg = #e0e0e0
lightfg = #f0f0f0

green = #70f070

headerheight = 50px
toolbarinside = 30px

topicwidth = 20%

toolbarborder = 2px

toolbarheight = toolbarinside + toolbarborder

transition()
	-webkit-transition arguments
	-khtml-transition arguments
	-moz-transition arguments
	-ms-transition arguments
	-o-transition arguments
	transition arguments

html, body
	margin 0 auto
	padding 0
	background bg

*
	outline none
	font-family 'Open Sans', Helvetica, sans-serif

#header
	position absolute
	top 0
	left 0
	right 0
	height headerheight
	background bg

#toolbar
	position absolute
	top headerheight
	left 0
	right 0
	height toolbarinside
	background darkbg
	border solid mediumbg
	border-width 0 0 toolbarborder 0

#topicbar
	position absolute
	top headerheight + toolbarheight
	left 0
	bottom 0
	width topicwidth
	background darkbg

#content
	position absolute
	top headerheight + toolbarheight
	left topicwidth
	right 0
	bottom 0
	background lightbg

#search
	position absolute
	top 0
	bottom 0
	right 0
	width 200px
	padding 10px
	color mediumfg
	background mediumbg
	border 0

.article
	position absolute
	top 0
	left 0
	right 0
	bottom 0
	padding 20px
	color green

.topicnode
	width calc(100% - 10px)
	height 30px
	padding 5px
	background mediumbg
	color darkfg
	transition .1s

	&:hover, &.selected
		background lightbg
